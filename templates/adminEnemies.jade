extends layout

block scripts
  script(type="text/javascript", src="/javascripts/add_enemy.js")

block content
  h2.pageTitle Add Enemy

  form#enemyForm.form-horizontal(method="POST")
    .row-fluid
      .span4
        .control-group
          label.control-label(for="name") Name:
          .controls
            input(type="text", name="name")
      .span4
        .control-group
          label.control-label(for="type") Type:
          .controls
            input(type="text", name="type")
      .span4
        .control-group
          label.control-label(for="image") Image:
          .controls
            input(type="file", accept="image/png", name="image")
    .row-fluid
      .span4
        .control-group
          label.control-label(for="health") Health
          .controls
            input(type="number", name="health")
      .span4
        .control-group
          label.control-label(for="armor") Armor
          .controls
            input(type="number") Armor
      .span4
        .control-group
          label.control-label(for="level") Level
          .controls
            select(name="level", value="1")
              option(value="1") 1
              option(value="2") 2
              option(value="3") 3
              option(value="4") 4
              option(value="5") 5
              option(value="6") 6
              option(value="7") 7
    h3 Attacks
    table.table.table-striped.attacks
      thead
        tr
          th Attack Name
          th Hit Chance (%)
          th Min. Damage
          th Max. Damage
      tbody
        tr.attack
          td
            input.attack_name(type="text")
          td
            input.hit_percent(type="number")
          td
            input.min_damage(type="number")
          td
            input.max_damage.last(type="number")
    .form-actions
      button.btn.btn-success(type="submit") Submit
