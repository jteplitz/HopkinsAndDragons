extends layout

block scripts
  script(type="text/javascript", src="/javascripts/add_enemy.js")

block content
  h2.pageTitle Add Enemy

  form#enemyForm.form-horizontal(method="POST", enctype="multipart/form-data")
    .row-fluid
      .span4
        .control-group
          label.control-label(for="name") Name:
          .controls
            input(type="text", name="name", value="#{enemy.name}")
      .span4
        .control-group
          label.control-label(for="type") Type:
          .controls
            input(type="text", name="type", value="#{enemy.type}")
      .span4
        .control-group
          label.control-label(for="image") Image:
          .controls
            input(type="file", accept="image/png", name="image", value="#{enemy.image}")
    .row-fluid
      .span4
        .control-group
          label.control-label(for="health") Health
          .controls
            input(type="number", name="health", value="#{enemy.health}")
      .span4
        .control-group
          label.control-label(for="armor") Armor
          .controls
            input(type="number", name="armor", value="#{enemy.armor}") Armor
      .span4
        .control-group
          label.control-label(for="level") Level
          .controls
            select(name="level", value="#{enemy.level}")
              option(value="1") 1
              option(value="2") 2
              option(value="3") 3
              option(value="4") 4
              option(value="5") 5
              option(value="6") 6
              option(value="7") 7
    h3 Attacks
    table.table.table-striped.attacks
      thead
        tr
          th Attack Name
          th Hit Chance (%)
          th Min. Damage
          th Max. Damage
      tbody
        for attack in enemy.attacks
          tr.attack
            td
              input.attack_name(type="text", value="#{attack.name}")
            td
              input.hit_percent(type="number", value="#{attack.hitChance}")
            td
              input.min_damage(type="number", value="#{attack.minDamage}")
            td
              input.max_damage(type="number", value="#{attack.maxDamage}")

        tr.attack
          td
            input.attack_name(type="text")
          td
            input.hit_percent(type="number")
          td
            input.min_damage(type="number")
          td
            input.max_damage.last(type="number")
    .form-actions
      button.btn.btn-success(type="submit") Submit
